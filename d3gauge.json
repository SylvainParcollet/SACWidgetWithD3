{
	"eula": "",
	"vendor": "SAP",
	"license": "",
	"id": "com.sap.samples.d3gauge",
	"version": "1.0.0",
	"name": "D3 Gauge",
	"newInstancePrefix": "D3Gauge",
	"description": "A simple D3 gauge",
	"icon": "data:image/png;base64,",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "sap-d3gauge",
			"url": "https://github.wdf.sap.corp/pages/d035331/SAPPHIRE2019_Gauge/webcomponents.js",
			"properties": [
                "measureMax",
				"measureMin",
				"measureVal"
			],
			"eventEffects": {
				"onClick": ["TODO_It_Should_Also_workWithout"]
			}
		},
		{
			"kind": "styling",
			"tag": "sap-d3gauge-aps",
			"url": "https://github.wdf.sap.corp/pages/d035331/SAPPHIRE2019_Gauge/aps_webcomponent.js",
			"properties": [
				"color"
			],
			"eventEffects": {
				"submit": [
					"color"
				]
			}
		}
	],
	"properties": {
		"measureMax": {
			"type": "number",
			"description": "The max value the measure can take"
		},
		"measureMin": {
            "type": "number",
            "description": "The min value the measure can take"
		},
		"measureVal": {
            "type": "number",
            "description": "Where the needle should be"
		},
		"color": {
            "type": "string",
            "description": "color of the gaige's vectors"
		}
	},
	"methods": {
		"updateDrawing": {
			"description": "Update the gauge",
			"parameters": [
                {
					"name": "measureMin",
					"type": "number",
					"description": "Minim Measure Value, at which the gauge is in the rest position"
				},
				{
					"name": "measureMax",
					"type": "number",
					"description": "Maximum Measure Value, at which the gauge is in the max position"
				},
				{
					"name": "measureVal",
					"type": "number",
					"description": "The measure value"
				}
			],
            "body": "this.measureMin = measureMin;this.measureMax = measureMax;this.measureVal = measureVal;"
		}
	},
	"events": {
	   "onClick": {
			"description": "Gauge was clicked"
	   }
	}
}
  